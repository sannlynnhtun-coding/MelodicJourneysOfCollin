@page "/"
<div class="row">
    <div class="col-12">
        <PageMusicPlayer />
    </div>
</div>
<div class="row">
    <Virtualize Context="soundCloudItem" ItemsProvider="GetSoundcloud">
        <ItemContent>
            <iframe width="100%" height="166" scrolling="no" @onload="IframeLoad"
                    style="margin-top: 3%;border-radius: 12px;"
                    frameborder="no" allow="autoplay"
                    src="@soundCloudItem.Link">
            </iframe>
        </ItemContent>
        <Placeholder>
            <p>
                Loading&hellip;
            </p>
        </Placeholder>
    </Virtualize>
</div>

@code{
    private List<SoundCloudPlaylistModel> _soundCloudList { get; set; } = new();

    protected override void OnInitialized()
    {
        _soundCloudList = MusicService.SoundCloundPlaylist;
    }

    ValueTask<ItemsProviderResult<SoundCloudPlaylistModel>> GetSoundcloud(ItemsProviderRequest request)
    {
        return new(new ItemsProviderResult<SoundCloudPlaylistModel>(
            _soundCloudList.Skip(request.StartIndex).Take(request.Count),
            _soundCloudList.Count));
    }

    async Task IframeLoad()
    {
        
    }
}